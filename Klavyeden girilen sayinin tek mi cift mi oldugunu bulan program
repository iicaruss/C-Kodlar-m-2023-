#include <stdio.h>
#include <stdlib.h>

int main()
{
      int a;
    printf("*-----KLAVYEDEN GIRILEN SAYININ TEK MI CIFT MI OLDUGUNU BULAN PROGRAMA HOSGELDINIZ...-----*\n Lutfen bir sayi giriniz: ");
    scanf("%d",&a);
    if (a%2==0)
    {
          printf("Girdiginiz sayi cifttir.");
    }
    else
    {
          printf("Girdiginiz sayi tektir.");
    }
}
